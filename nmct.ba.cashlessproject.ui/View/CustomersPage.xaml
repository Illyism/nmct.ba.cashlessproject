<UserControl x:Class="nmct.ba.cashlessproject.ui.View.CustomersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:nmct.ba.cashlessproject.ui.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <vm:CustomersVM/>
    </UserControl.DataContext>
    <Grid>
        <Label Content="Customers"></Label>
        <ListBox ItemsSource="{Binding Customers}" DisplayMemberPath="CustomerName"/>
    </Grid>
</UserControl>
